# Database Configuration
# Copy this file to .env and update as needed
export WWC_ROOT=.

# SQLite database path
# The file will be created automatically if it doesn't exist
export DATABASE_URL=sqlite:${WWC_ROOT}/test.db

# Alternative: in-memory database (data lost on restart)
# DATABASE_URL=sqlite::memory:

# Alternative: custom path
# DATABASE_URL=sqlite:./server/data/wwc.db
